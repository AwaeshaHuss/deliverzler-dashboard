rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Secure all documents by default
    match /{document=**} {
      allow read, write: if false;
    }

    // USERS
    match /users/{userId} {
      // Admins can read and update user status
      allow read, update: if isAdmin();
      
      // Allow users to create their own profile, but only admins can modify critical fields.
      allow create: if request.auth != null
                    && request.auth.uid == userId
                    && request.resource.data.email == request.auth.token.email
                    && request.resource.data.name is string
                    && request.resource.data.status == 'Active'
                    // Ensure non-admin fields are not set on creation
                    && !("admin" in request.resource.data);
    }

    // DRIVERS
    match /drivers/{driverId} {
        // Admins can manage driver profiles
        allow read, create, update, delete: if isAdmin();
    }

    // ORDERS
    match /orders/{orderId} {
      // Admins can manage all orders
      allow read, create, update, delete: if isAdmin();
    }
    
    // MENU ITEMS
    match /menuItems/{menuItemId} {
      // Any authenticated user (including admins) can read the menu
      allow read: if request.auth != null;
      // Only admins can create, update, or delete menu items
      allow create, update, delete: if isAdmin()
                                      && request.resource.data.name is string
                                      && request.resource.data.price is number
                                      && request.resource.data.price > 0
                                      && request.resource.data.category is string
                                      && request.resource.data.imageUrl is string;
    }

    // PROMOTIONS
    match /promotions/{promotionId} {
      // Any authenticated user can read promotions
      allow read: if request.auth != null;
      // Only admins can manage promotions
      allow create, update, delete: if isAdmin()
                                      && request.resource.data.code is string
                                      && request.resource.data.discount is string
                                      && request.resource.data.status in ['Active', 'Expired']
                                      && request.resource.data.startDate is string
                                      && request.resource.data.endDate is string;
    }
    
    // REVIEWS
    match /reviews/{reviewId} {
      // Any authenticated user can read reviews
      allow read: if request.auth != null;
      // Authenticated users can create reviews
      allow create: if request.auth != null;
      // Only admins can delete (hide) reviews
      allow delete: if isAdmin();
    }
  }
}
