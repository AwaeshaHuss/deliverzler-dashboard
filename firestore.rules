rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Secure all documents by default
    match /{document=**} {
      allow read, write: if false;
    }

    // USERS
    match /users/{userId} {
      allow read, update, delete: if isAdmin();
      // Allow user creation on signup, but only with valid data and matching UID
      allow create: if request.auth != null
                    && request.auth.uid == userId
                    && request.resource.data.email == request.auth.token.email
                    && request.resource.data.name is string
                    && request.resource.data.status == 'Active';
    }

    // DRIVERS
    match /drivers/{driverId} {
      allow read, create, update, delete: if isAdmin();
    }

    // ORDERS
    match /orders/{orderId} {
      allow read, create, update, delete: if isAdmin();
    }
    
    // MENU ITEMS
    match /menuItems/{menuItemId} {
      allow read: if request.auth != null; // Allow any authenticated user to read the menu
      allow create, update, delete: if isAdmin();
    }

    // PROMOTIONS
    match /promotions/{promotionId} {
      allow read: if request.auth != null; // Allow any authenticated user to read promotions
      allow create, update, delete: if isAdmin();
    }
    
    // REVIEWS
    match /reviews/{reviewId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null; // Allow authenticated users to create reviews
      allow delete: if isAdmin(); // Only admins can delete (hide) reviews
    }
  }
}
