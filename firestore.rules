rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Secure all documents by default
    match /{document=**} {
      allow read, write: if false;
    }

    // USERS
    match /users/{userId} {
      // Admins can read, update, and delete user profiles
      allow read, update, delete: if isAdmin();
      
      // Users can create their own profile upon signup
      allow create: if request.auth != null
                    && request.auth.uid == userId
                    && request.resource.data.email == request.auth.token.email
                    && request.resource.data.name is string
                    && request.resource.data.status == 'Active';
    }

    // DRIVERS
    match /drivers/{driverId} {
        // Admins can manage driver profiles
        allow read, create, update, delete: if isAdmin();
    }

    // ORDERS
    match /orders/{orderId} {
      // Admins can manage all orders
      allow read, create, update, delete: if isAdmin();
    }
    
    // MENU ITEMS
    match /menuItems/{menuItemId} {
      // Any authenticated user (including admins) can read the menu
      allow read: if request.auth != null;
      // Only admins can create, update, or delete menu items
      allow create, update, delete: if isAdmin();
    }

    // PROMOTIONS
    match /promotions/{promotionId} {
      // Any authenticated user can read promotions
      allow read: if request.auth != null;
      // Only admins can manage promotions
      allow create, update, delete: if isAdmin();
    }
    
    // REVIEWS
    match /reviews/{reviewId} {
      // Any authenticated user can read reviews
      allow read: if request.auth != null;
      // Authenticated users can create reviews
      allow create: if request.auth != null;
      // Only admins can delete (hide) reviews
      allow delete: if isAdmin();
    }
  }
}
