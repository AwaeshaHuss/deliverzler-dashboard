
{
  "entities": {
    "User": {
      "title": "User",
      "description": "A user of the Deliverzler platform.",
      "type": "object",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the user." },
        "name": { "type": "string", "description": "The user's full name." },
        "email": { "type": "string", "format": "email", "description": "The user's email address." },
        "avatarUrl": { "type": "string", "format": "uri", "description": "URL for the user's avatar image." },
        "dataAiHint": { "type": "string", "description": "AI hint for image generation." },
        "dateJoined": { "type": "string", "format": "date-time", "description": "The date the user joined." },
        "lastOrder": { "type": "string", "format": "date-time", "description": "The date of the user's last order." },
        "status": { "type": "string", "enum": ["Active", "Blocked"], "description": "The user's account status." },
        "address": { "type": "string", "description": "The user's primary address." },
        "favorites": { "type": "number", "description": "Number of favorite items." },
        "promoCodes": { "type": "number", "description": "Number of promo codes used." },
        "supportTickets": { "type": "number", "description": "Number of support tickets submitted." },
        "activitySummary": { "type": "string", "description": "A summary of the user's activity." }
      },
      "required": ["id", "name", "email", "status"]
    },
    "Driver": {
      "title": "Driver",
      "description": "A driver for the Deliverzler platform.",
      "type": "object",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the driver." },
        "name": { "type": "string", "description": "The driver's full name." },
        "email": { "type": "string", "format": "email", "description": "The driver's email address." },
        "avatarUrl": { "type": "string", "format": "uri", "description": "URL for the driver's avatar image." },
        "dataAiHint": { "type": "string", "description": "AI hint for image generation." },
        "phone": { "type": "string", "description": "The driver's phone number." },
        "vehicle": { "type": "string", "description": "The driver's vehicle information." },
        "dateJoined": { "type": "string", "format": "date-time", "description": "The date the driver joined." },
        "status": { "type": "string", "enum": ["Approved", "Pending", "Rejected"], "description": "The driver's application status." },
        "availability": { "type": "string", "enum": ["Online", "Offline", "Busy"], "description": "The driver's current availability." }
      },
      "required": ["id", "name", "email", "status", "availability"]
    },
    "Order": {
      "title": "Order",
      "description": "An order placed by a customer.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "customer": { "type": "object", "properties": { "name": { "type": "string" }, "avatarUrl": { "type": "string" }, "dataAiHint": { "type": "string" } } },
        "driver": { "type": "object", "properties": { "name": { "type": "string" }, "avatarUrl": { "type": "string" }, "dataAiHint": { "type": "string" } } },
        "items": { "type": "array", "items": { "type": "object", "properties": { "name": { "type": "string" }, "quantity": { "type": "number" } } } },
        "status": { "type": "string", "enum": ["Pending", "Accepted", "Preparing", "On The Way", "Delivered", "Cancelled"] },
        "total": { "type": "number" },
        "date": { "type": "string", "format": "date-time" },
        "deliveryAddress": { "type": "string" }
      }
    },
    "MenuItem": {
      "title": "Menu Item",
      "description": "An item on the restaurant menu.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "category": { "type": "string" },
        "price": { "type": "number" },
        "imageUrl": { "type": "string", "format": "uri" },
        "dataAiHint": { "type": "string" },
        "description": { "type": "string" },
        "options": { "type": "array", "items": { "type": "object", "properties": { "name": { "type": "string" }, "price": { "type": "number" } } } },
        "addons": { "type": "array", "items": { "type": "object", "properties": { "name": { "type": "string" }, "price": { "type": "number" } } } }
      },
      "required": ["name", "category", "price", "imageUrl", "description"]
    },
     "MenuCategory": {
      "title": "Menu Category",
      "description": "A category on the restaurant menu.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "imageUrl": { "type": "string", "format": "uri" },
        "dataAiHint": { "type": "string" },
        "description": { "type": "string" }
      },
      "required": ["name", "imageUrl", "description"]
    },
    "Promotion": {
      "title": "Promotion",
      "description": "A promotional offer.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "code": { "type": "string" },
        "description": { "type": "string" },
        "discount": { "type": "string" },
        "status": { "type": "string", "enum": ["Active", "Expired"] },
        "startDate": { "type": "string", "format": "date" },
        "endDate": { "type": "string", "format": "date" }
      }
    },
    "Review": {
      "title": "Review",
      "description": "A user review.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "customerName": { "type": "string" },
        "rating": { "type": "number" },
        "comment": { "type": "string" },
        "date": { "type": "string", "format": "date" }
      }
    }
  },
  "auth": {
    "providers": ["email"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/User" },
      "description": "Stores user profile information."
    },
    "/drivers/{driverId}": {
      "schema": { "$ref": "#/entities/Driver" },
      "description": "Stores driver profile and application information."
    },
    "/orders/{orderId}": {
      "schema": { "$ref": "#/entities/Order" },
      "description": "Stores customer orders."
    },
    "/menuItems/{menuItemId}": {
      "schema": { "$ref": "#/entities/MenuItem" },
      "description": "Stores menu items."
    },
     "/menu_categories/{categoryId}": {
      "schema": { "$ref": "#/entities/MenuCategory" },
      "description": "Stores menu categories."
    },
    "/promotions/{promotionId}": {
      "schema": { "$ref": "#/entities/Promotion" },
      "description": "Stores promotional offers."
    },
    "/reviews/{reviewId}": {
      "schema": { "$ref": "#/entities/Review" },
      "description": "Stores user reviews."
    }
  }
}
